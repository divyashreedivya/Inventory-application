extends layout

block head
  link(rel="stylesheet" href="/stylesheets/category.css")

block content
  div.container-fluid
    h1 #{title} : #{category.name}

    
    p #[strong Description : ] #{category.description} 

    div.items
      h4 Items
      dl 
        each item in category_items
          dt  
            a(href=item.url) #{item.name} 
          dd #{item.description} 

        else
          p This category has no items

    hr
    p
      a(href= category.url+'/delete') Delete
    p
      a(href= category.url+'/update') Update       
          