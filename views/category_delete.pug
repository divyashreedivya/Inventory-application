extends layout

block head
  link(rel="stylesheet" href="/stylesheets/category.css")

block content
  div.container-fluid
    h1 #{title} : #{category.name} 

    br
    br  
    if category_items.length
      p #[strong Delete the following items before attempting to delete this category.] 

      div
        h4 Items
        ul 
          each item in category_items
            li
              a(href=item.url) #{item.name} 
      br
      br        
      button.btn.btn-success
        a(href='/inventory/categories') Cancel

    else
      br
      div.jumbotron
        p.del Do you really want to delete this category ?

        form(method='POST' action='')
          .form-group
            input#id.form-control(type='hidden' name='id' required='true' value=category._id)
          button.btn.btn-primary(type='submit') Delete            