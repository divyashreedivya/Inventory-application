extends layout

block head
  link(rel="stylesheet" href="/stylesheets/category.css")

block content
  
  h1 #{title}

  form(method='POST' action='')
    .form-group
      label(for='name') Category:
      input#name.form-control(type='text' placeholder='Enter category name' name='name' value=(undefined== category ? '':category.name) required='true')
      label(for='description') Description:
      textarea#description.form-control(name='description' value=(undefined==category?'':category.description) required='true')
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul 
      for error in errors
        li!=error.msg    